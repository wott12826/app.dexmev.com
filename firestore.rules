rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Временные правила для тестирования invite code
    match /users/{userId} {
      // Разрешить любому залогиненному пользователю читать и обновлять документы пользователей
      allow read, write: if request.auth != null;
    }

    // Доступ на чтение inviteCode (анонимный, только с фильтром и лимитом)
    match /users/{document=**} {
      allow list: if true;
      allow list: if request.query != null &&
                   request.query.filters.size() == 1 &&
                   request.query.filters[0].fieldPath == "inviteCode" &&
                   request.query.filters[0].op == "==" &&
                   request.query.limit <= 10;
    }
  }
}
